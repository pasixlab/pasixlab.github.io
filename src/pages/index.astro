---
import Layout from "../layouts/Layout.astro";
---

<!-- Interactive art, creative code, software art, installation art, lighting, web development -->
<Layout
  title="PasixLab - Coding, data analytics, DIY lab"
  description="Your partner for Coding, data analytics, DIY lab"
>
  <main class="page">
    <div class="intro full-height parallax-three">
      <h1 class="page-title">
        p<span class="red">a</span>sixLab
      </h1>
    </div>
    <div class="content full-height">
      <div class="features">
        <div>
          <h2 class="section-title">Our Services</h2>
          <ul class="list">
            <li>
              Integrated digital solutions: website, ecommerce, operations
              software
            </li>
            <li>Web perfomance & analytics</li>
            <li>Creative code, interactive installations, lighting</li>
            <li>Home automation</li>
            <li>Data analytics consulting</li>
          </ul>
        </div>
        <div>
          <h2 class="section-title">Our Values</h2>
          <ul class="list">
            <li>High code quality and highly tested</li>
            <li>Data-driven decision</li>
            <li>Creative and lateral thinking</li>
            <li>Agile Methodology: incremental and iterative</li>
            <li>Functional programming and statically typed language</li>
          </ul>
        </div>
      </div>

      <div class="contact">
        <p>
          Hey, tell us your idea, we can help you!<br />
          We can support your projects with many technology solutions.<br />
        </p>
        <a href="mailto:iac@pasixlab.com" target="_blank">Let's connect</a>
      </div>
    </div>
  </main>
  <div class="footer">
    <p>© 2012-present pasixLab | Monza-Brianza, Italy</p>
    <p>
      Photo by <a href="https://unsplash.com/@danotis">Dan Otis</a> on
      <a href="https://unsplash.com/photos/OYFHT4X5isg">Unsplash</a>
    </p>
  </div>
</Layout>

<script>
  window.document.addEventListener("DOMContentLoaded", () => {
    Array.from(document.getElementsByClassName("full-height")).forEach((el) => {
      (el as HTMLElement).style.minHeight = `${window.innerHeight}px`;
    });

    const title = document.querySelector(".page-title");
    const content = document.querySelector(".content");
    if (title && content) {
      title.addEventListener("click", () => {
        content.scrollIntoView({ behavior: "smooth" });
      });
    }
  });
</script>

<style>
  .page {
    text-align: center;
    padding: 0 20px;
    position: relative;
    background-color: var(--background);
  }
  .full-height {
    min-height: 100vh;
  }

  .intro {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .page-title {
    font-family: "Abril Fatface", cursive;
    letter-spacing: -0.01rem;
    line-height: 1;
    font-weight: normal;
    font-size: 40px;
    position: relative;
    cursor: pointer;
    color: rgb(200, 200, 200);
  }
  @media screen and (min-width: 375px) {
    .page-title {
      font-size: 70px;
    }
  }

  @media screen and (min-width: 992px) {
    .page-title {
      font-size: 112px;
    }
  }
  @keyframes arrow-fade-in {
    to {
      opacity: 1;
      transform: translateY(45px);
    }
  }
  .page-title:after {
    content: "↓";
    display: block;
    font-size: 50px;
    opacity: 0;
    transform: translateY(10px);
    animation: arrow-fade-in 800ms 500ms cubic-bezier(0.34, 1.56, 0.64, 1)
      forwards;
  }
  .parallax-three {
    width: 100%;
    background-image: url(/three.webp);
    background-attachment: fixed;
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
  }

  .section-title {
    font-size: 25px;
    padding-bottom: 10px;
    text-align: left;
  }
  @media screen and (min-width: 992px) {
    .section-title {
      font-size: 40px;
    }
  }

  .list {
    padding-left: 20px;
    padding-bottom: 40px;
    text-align: left;
  }
  .list li {
    padding: 5px 0;
  }
  .list ul {
    padding-left: 20px;
  }

  .content {
    padding: 50px 0px 0px;
  }
  @media screen and (min-width: 992px) {
    .content {
      padding: 25vh 0px 0px;
    }
  }

  .features {
    display: flex;
    justify-content: space-between;
    max-width: 800px;
    margin: 0 auto 60px;
  }
  .features div:first-child {
    margin-right: 20px;
  }

  .features > div {
    flex-basis: 50%;
  }

  .contact {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .contact p {
    line-height: 1.5;
  }
  .contact a {
    margin-top: 40px;
    font-size: 20px;
    display: block;
    text-decoration: none;
    border: 1px solid var(--accent);
    color: var(--font);
    position: relative;
    padding: 10px 50px;
    border-radius: 5px;
    z-index: 2;
    transition: all 0.5s ease;
  }
  .contact a:before {
    content: " ";
    border: 12px solid transparent;
    background-clip: padding-box;
    filter: blur(36px);
    box-sizing: border-box;
    opacity: 1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background-image: linear-gradient(165deg, var(--foregraund), var(--accent));
  }
  .contact a:hover {
    box-shadow: 0px 3px 6px var(--accent);
  }

  .footer {
    position: sticky;
    height: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    flex-direction: column;
    bottom: 0;
    z-index: -1;
    font-size: 16px;
    padding: 0 10px;
  }

  .footer p:first-child {
    padding-bottom: 5px;
  }
  .footer p a {
    text-decoration: none;
    color: var(--font);
  }

  .red {
    color: var(--accent);
  }
</style>
